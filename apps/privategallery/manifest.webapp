{
  "name": "CloudGallery",
  "description": "My Private Gallery",
  "type": "certified",
  "launch_path": "/index.html",
  "developer": {
    "name": "Jos√© Manuel Cantera",
    "url": "mailto:jmcf@tid.es"
  },
  "permissions": {
    "device-storage:pictures":{ "access": "readwrite" },
    "device-storage:videos":{ "access": "readwrite" },
    "systemXHR": {},
    "desktop-notification": {}
  },
  "activities": {
    "pick": {
      "filters": {
        "type": ["image/*", "audio/*", "video/*"],
        "self": "undefined"
       },
      "disposition": "inline",
      "returnValue": true,
      "href": "/index.html#pick"
    },
    "share": {
      "filters": {
        "type": ["image/*", "audio/*", "video/*"],
        "number": 1,
        "self": "undefined"
       },
      "disposition": "window"
    }
  },
  "orientation": "portrait-primary",
  "locales": {
    "en-US": {
      "name": "CloudGallery",
      "description": "My Private Gallery"
    }
  },
  "default_locale": "en-US",
  "icons": {
    "120": "/style/icons/icon_120_.png",
    "60": "/style/icons/icon_.png"
  }
}
